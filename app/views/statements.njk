{% extends '_layout.njk' %}

{% from "govuk/components/breadcrumbs/macro.njk" import govukBreadcrumbs %}

{% block content %}

  {{ govukBreadcrumbs({
    items: [{
      text: "Home",
      href: "/"
        }]
    })
  }}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-full">

      <h1 class="govuk-heading-l"> Statements available for {{ model[0].businessName }} ({{ frn }})</h1>

      <table class="govuk-table">

            <thead class="govuk-table__head">
                <tr class="govuk-table__row">
                    <th scope="col" class="govuk-table__header">Scheme</th>
                    <th scope="col" class="govuk-table__header">Period</th>
                    <th scope="col" class="govuk-table__header">Reference</th>
                    <th scope="col" class="govuk-table__header"></th>
                </tr>
            </thead>

            <tbody class="govuk-table__body">
                {% for statement in model %}
                  <tr class="govuk-table__row">
                      <td class="govuk-table__cell">{{ statement.scheme.name }}</td>
                      <td class="govuk-table__cell">{{ statement.payments[0].period }}</td>
                      <td class="govuk-table__cell">{{ statement.payments[0].reference }}</td>
                      <td class="govuk-table__cell">
                        <form method="POST" action="/statements">
                          <input type="hidden" name="crumb" value="{{crumb}}"/>
                          <input type="hidden" id="frn" name="frn" value="{{ frn }}">
                          <input type="hidden" id="paymentRequestNumber" name="paymentRequestNumber" value="{{ loop.index }}">
                          <button class="govuk-button-link">Navigate</button>
                        </form>
                    </td>
                  </tr>
                {% endfor %}
            </tbody>

        </table>
    </div>
  </div>

{% endblock %}